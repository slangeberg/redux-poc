{
  "name": "redux-poc",
  "version": "1.0.0",
  "description": "Taking a look at application architecture leveraging the [Redux framework](https://github.com/rackt/redux).",
  "main": "index.js",
  "dependencies": {
    "immutable": "^3.7.5"
  },
  "devDependencies": {
    "babel-core": "^6.1.21",
    "babel-loader": "^6.1.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "chai": "^3.4.1",
    "chai-immutable": "^1.5.2",
    "jsdom": "^7.0.2",
    "mocha": "^2.3.4",
    "webpack": "^1.12.6",
    "webpack-dev-server": "^1.12.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "scripts": {
    "start": "webpack-dev-server",
    "build": "webpack",
    "build-watch": "babel index.js --watch --out-file bundle.js",
    "test":       "mocha --compilers js:babel-core/register --require ./test/test_helper.js 'test/**/*.@(js|jsx)'",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slangeberg/redux-poc.git"
  },
  "bugs": {
    "url": "https://github.com/slangeberg/redux-poc/issues"
  },
  "homepage": "https://github.com/slangeberg/redux-poc#readme"
}
